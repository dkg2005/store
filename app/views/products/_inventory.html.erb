<% if product.inventory_count? %>
  <p class="text-green-600 font-semibold mt-4"><%= product.inventory_count %> in stock</p>
<% else %>
  <div class="mt-6 bg-red-50 border-l-4 border-red-400 p-4 rounded">
    <p class="text-red-600 font-semibold mb-2">Out of stock</p>
    <p class="text-gray-700 mb-4">Email me when available:</p>

    <%= form_with model: [product, Subscriber.new], html: { class: "space-y-4" } do |form| %>
      <div>
        <%= form.email_field :email,
              placeholder: "you@example.com",
              required: true,
              class: "w-full px-4 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-blue-500" %>
      </div>
      <div>
        <%= form.submit "Notify Me",
              class: "bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700 transition" %>
      </div>
    <% end %>
  </div>
<% end %>
